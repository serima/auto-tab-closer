{
  "manifest_version": 3,
  "name": "Customizable Auto Close Tabs",
  "description": "ユーザーが設定可能なタブ自動クローズ機能。",
  "version": "1.4",
  "permissions": [
    "tabs", 
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon_16x16.png",
    "48": "icon_48x48.png",
    "128": "icon_128x128.png"
  }
}
