{
  "manifest_version": 3,
  "name": "Auto Close Tabs",
  "description": "PCスリープ中でもタブのカウントダウンを維持する拡張機能。",
  "version": "1.2",
  "permissions": [
    "tabs", 
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon_16x16.png",
    "48": "icon_48x48.png",
    "128": "icon_128x128.png"
  }
}
